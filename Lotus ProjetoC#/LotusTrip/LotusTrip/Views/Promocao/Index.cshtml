@model IEnumerable<LotusTrip.Models.Promocao>

@{
    ViewData["Title"] = "Promoção";
}

<h1>Promoções</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Criar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome da Promoção
            </th>
            <th>
                Valor do Desconto
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomePromocao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorDesconto)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-light">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
