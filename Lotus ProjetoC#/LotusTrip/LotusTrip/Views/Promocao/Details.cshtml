@model LotusTrip.Models.Promocao

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Promocao</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome da Promoção
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomePromocao)
        </dd>
        <dt class = "col-sm-2">
            Valor do Desconto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ValorDesconto)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Editar</a> |
    <a asp-action="Index" class="btn btn-outline-light">Voltar</a>
</div>
